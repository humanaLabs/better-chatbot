{
  "name": "better-chatbot-desktop-agent",
  "version": "1.0.0",
  "description": "Agente desktop local para controle h√≠brido do navegador",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && electron-builder",
    "build-standalone": "tsc",
    "dev": "concurrently \"tsc -w\" \"electron dist/main.js\"",
    "start": "electron dist/main.js",
    "start-standalone": "node dist/standalone-main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["playwright", "automation", "desktop", "agent", "hybrid"],
  "author": "Better Chatbot Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "express": "^4.18.0",
    "ws": "^8.14.0",
    "systray": "^1.0.5",
    "auto-launch": "^5.0.5",
    "@types/express": "^4.17.0",
    "@types/ws": "^8.5.0"
  },
  "build": {
    "appId": "com.betterchatbot.desktop-agent",
    "productName": "Better Chatbot Desktop Agent",
    "directories": {
      "output": "dist-electron"
    },
    "files": ["dist/**/*", "assets/**/*"],
    "win": {
      "target": "dir"
    },
    "mac": {
      "target": "dir"
    },
    "linux": {
      "target": "dir"
    },
    "compression": "store",
    "removePackageScripts": true,
    "nsis": false,
    "portable": false,
    "forceCodeSigning": false
  }
}
